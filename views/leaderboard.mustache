<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <div class="container">
      <h1>LeaderBoard</h1>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Guesses Left</th>
            <th>Date</th>
          </tr>
          {{#leaders}}
          <tr>
            <td><img src="{{image}}" alt=""></td>
            <td>{{name}}</td>
            <td>{{guessesLeft}}</td>
            <td>{{date}}</td>
          </tr>
          {{/leaders}}
        </thead>
      </table>
    </div>
  </body>
</html>
