<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Leaderboard</title>
    <link rel="stylesheet" href="/css/main.css">
  </head>
  <body>
    <div class="container">
      <h1>LeaderBoard</h1>
      <div class="headers">
        <div class="header">

        </div>
        <div class="header">
          Name
        </div>
        <div class="header">
          Guesses Left
        </div>
        <div class="header">
          Date
        </div>
      </div>
      {{#leaders}}
      <div class="leader">
        <div class="leader-image">
          <img src="{{image}}" alt="">
        </div>
        <div class="leader-name">
          {{name}}
        </div>
        <div class="leader-guesses">
          {{guessesLeft}}
        </div>
        <div class="leader-date">
          {{date}}
        </div>
      </div>
      {{/leaders}}
    </div>
  </body>
</html>
